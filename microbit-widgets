module = 1

def on_button_pressed_a():
    global module
    if module >= 2:
        module -= -1
input.on_button_pressed(Button.A, on_button_pressed_a)

def on_button_pressed_b():
    global module
    if module >= 1:
        module += 1
input.on_button_pressed(Button.B, on_button_pressed_b)

while True:
    while module == 1:
        basic.show_number(input.temperature())

    while module == 2:
        if input.compass_heading() >= 330 and input.compass_heading() < 30:
            basic.show_arrow(ArrowNames.NORTH)
        elif input.compass_heading() >= 30 and input.compass_heading() < 60:
            basic.show_arrow(ArrowNames.NORTH_EAST)
        elif input.compass_heading() >= 60 and input.compass_heading() < 120:
            basic.show_arrow(ArrowNames.EAST)
        elif input.compass_heading() >= 120 and input.compass_heading() < 150:
            basic.show_arrow(ArrowNames.SOUTH_EAST)
        elif input.compass_heading() >= 150 and input.compass_heading() < 210:
            basic.show_arrow(ArrowNames.SOUTH)
        elif input.compass_heading() >= 210 and input.compass_heading() < 240:
            basic.show_arrow(ArrowNames.SOUTH_WEST)
        elif input.compass_heading() >= 240 and input.compass_heading() < 300:
            basic.show_arrow(ArrowNames.WEST)
        elif input.compass_heading() >= 300 and input.compass_heading() < 330:
            basic.show_arrow(ArrowNames.NORTH_WEST)
        else:
            basic.show_arrow(ArrowNames.NORTH)

    while module == 3:
        basic.show_icon(IconNames.EIGTH_NOTE)
        music.set_built_in_speaker_enabled(True)
        music.set_tempo(114)
        music.play_tone(262, music.beat(BeatFraction.WHOLE))
        music.rest(music.beat(BeatFraction.HALF))
        music.play_tone(294, music.beat(BeatFraction.WHOLE))
        music.rest(music.beat(BeatFraction.HALF))
        music.play_tone(196, music.beat(BeatFraction.HALF))
        music.rest(music.beat(BeatFraction.HALF))
        music.play_tone(294, music.beat(BeatFraction.WHOLE))
        music.rest(music.beat(BeatFraction.HALF))
        music.play_tone(330, music.beat(BeatFraction.WHOLE))
        music.rest(music.beat(BeatFraction.HALF))
        music.play_tone(392, music.beat(BeatFraction.QUARTER))
        music.play_tone(349, music.beat(BeatFraction.QUARTER))
        music.play_tone(330, music.beat(BeatFraction.QUARTER))
        music.play_tone(262, music.beat(BeatFraction.WHOLE))
        music.rest(music.beat(BeatFraction.HALF))
        music.play_tone(294, music.beat(BeatFraction.WHOLE))
        music.rest(music.beat(BeatFraction.HALF))
        music.play_tone(196, music.beat(BeatFraction.WHOLE))
        music.rest(music.beat(BeatFraction.DOUBLE))
        music.rest(music.beat(BeatFraction.WHOLE))
        music.rest(music.beat(BeatFraction.HALF))

